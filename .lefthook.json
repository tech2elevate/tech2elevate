{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "pre-commit": {
    "parallel": true,
    "commands": {
      "format": {
        "glob": "*.{ts,tsx,md,mdx,html,yml,yaml,mjs,js,json}",
        "run": "pnpm prettier --write {staged_files}",
        "stage_fixed": true
      },
      "knip": {
        "run": "pnpm knip"
      }
    }
  }
}
